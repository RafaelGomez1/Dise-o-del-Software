<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    tools:context="com.example.joans.timetracker.newAction">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleCreation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_an_action"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:paddingTop="10dp"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="66dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="81dp"
            android:orientation="horizontal"
            tools:ignore="RtlSymmetry">

            <RadioButton
                android:id="@+id/projectRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/projectMayus"
                android:textAlignment="viewStart" />

            <RadioButton
                android:id="@+id/taskRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/task"
                android:textAlignment="viewStart" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
